  	<select id="select-all-game" resultType="Game">
  		SELECT * FROM game
  	</select>
  	
  	<insert id="insert-game" parameterType="Game">
  		insert into game (title, description, cover_image, state, version) 
  		values (#{title}, #{description}, #{coverImage}, #{state}, #{version})
  	</insert>
  	
  	<update id="update-game" parameterType="Game">
  		update game set title = #{title}, description = #{description}, cover_image = #{coverImage}, state = #{state}, version = #{version}
